extends layout

block head
    meta(name='description', content='Salut ! Moi c\'est Danyella Strikann, Développeuse Full-Stack Junior et en première année de Bachelor Universitaire Technologique des Métiers du Multimedia et de l\'internet')
    meta(name='keywords', content='alternance, danyella, strikann, développeuse, développeur, full-stack, full stack, développeur full-stack, développeuse full-stack, javascript, html, css, accueil')
